<!-- Create TratamientosEsteticos-->

@model MedicalPLE.Models.TratamientosEsteticos
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center"> Crear TratamientosEsteticos</h3>
<form method="post" asp-action="Create" id="formTratamientosEsteticos">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">    
        
           <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NombreTratamientoEstetico">Nombre Tratamiento</label>
                </div>
                <div class="col-8">
                    <input id="IdNombreTratamientoEstetico" asp-for="NombreTratamientoEstetico" class="form-control" type="text" maxlength="400"/>
                    <span asp-validation-for="NombreTratamientoEstetico" class="text-danger"></span>
                </div>
            </div>

           <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ObservacionesTratamiento">Descripci√≥n Tratamiento</label>
                </div>
                <div class="col-8">
                   <textarea id="IdObservacionesTratamiento" asp-for="ObservacionesTratamiento" class="form-control" style="height:300px;"></textarea>
                    <span asp-validation-for="ObservacionesTratamiento" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_VistaCrearVolver"/>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="https://cdn.tiny.cloud/1/qukxrn62f4bz0iv6z7enaelkkzuzugir28y709xit9xm659s/tinymce/5/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}


