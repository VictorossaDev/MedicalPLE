<!-- Create EstadoCivil-->

@model MedicalPLE.Models.EstadoCivil
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center"> Crear EstadoCivil</h3>
<form method="post" asp-action="Create" id="formEstadoCivil">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">    
        
           <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NombreEstadoCivil">Nombre Estado Civil</label>
                </div>
                <div class="col-8">
                    <input id="IdNombreEstadoCivil" asp-for="NombreEstadoCivil" class="form-control" type="text" maxlength="100"/>
                    <span asp-validation-for="NombreEstadoCivil" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_VistaCrearVolver"/>
                </div>
            </div>
        </div>
    </div>
</form>




