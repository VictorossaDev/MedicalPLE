                        <label asp-for="Paciente.EstadoCivilId">Estado Civil</label>
                    </div>
                    <div class="col-4">
                        @Html.DropDownListFor(m => m.Paciente.EstadoCivilId, Model.ListaEstadoCivil,
                         "-Por favor seleccione Estado Civil-", new { @class = "form-control" })
