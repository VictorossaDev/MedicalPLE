                    <div class="col-2">
                        <label asp-for="Paciente.TipodocId">Tipo de Documento</label>
                    </div>
                    <div class="col-4">
                        @Html.DropDownListFor(m => m.Paciente.TipodocId, Model.ListaTipodoc,
                         "-Por favor seleccione Tipo de Documento-", new { @class = "form-control" })
                    </div>

                    <div class="col-2">
                        <label asp-for="Paciente.NumeroDocumento">No. Documento</label>
                    </div>
                    <div class="col-4">
                        @*<input asp-for="Paciente.NumeroDocumento" class="form-control"  type="number"  min="1" max="5"/>*@
