<!-- Tabla Dependiente => Paciente-->
@model MedicalPLE.Models.ViewModels.PacienteVM
@{
    ViewData["Title"] = "Editar Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center"> Editar paciente</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden"  asp-for="Paciente.PacienteId"/>
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">

           <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Paciente.NumeroDoc"></label>
                </div>
                <div class="col-8">
                    @*<input asp-for="Paciente.NumeroDoc" class="form-control"  type="number"  min="1" max="5"/>*@
                    <input asp-for="Paciente.NumeroDoc" class="form-control"  type="number" />
                    <span asp-validation-for="Paciente.NumeroDoc" class="text-danger"></span>
                </div>
            </div>

           <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Paciente.NombreApellido">Nombres y Apellidos Paciente</label>
                </div>
                <div class="col-8">
                    <input asp-for="Paciente.NombreApellido" class="form-control" type="text" maxlength="400" />
                    <span asp-validation-for="Paciente.NombreApellido" class="text-danger"></span>
                </div>
            </div>

           <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Paciente.Edad"></label>
                </div>
                <div class="col-8">
                    @*<input asp-for="Paciente.Edad" class="form-control"  type="number"  min="1" max="5"/>*@
                    <input asp-for="Paciente.Edad" class="form-control"  type="number" />
                    <span asp-validation-for="Paciente.Edad" class="text-danger"></span>
                </div>
            </div>

           <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Paciente.Nacionalidad">Nacionalidad</label>
                </div>
                <div class="col-8">
                    <input asp-for="Paciente.Nacionalidad" class="form-control" type="text" maxlength="300" />
                    <span asp-validation-for="Paciente.Nacionalidad" class="text-danger"></span>
                </div>
            </div>

             <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Paciente.TipodocId">Tipodoc</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Paciente.TipodocId, Model.ListaTipodoc,
                     "-Por favor seleccione Tipodoc-", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Paciente.TiposangreId">Tiposangre</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Paciente.TiposangreId, Model.ListaTiposangre,
                     "-Por favor seleccione Tiposangre-", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Paciente.EstadocivilId">Estadocivil</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Paciente.EstadocivilId, Model.ListaEstadocivil,
                     "-Por favor seleccione Estadocivil-", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Paciente.GeneroId">Genero</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Paciente.GeneroId, Model.ListaGenero,
                     "-Por favor seleccione Genero-", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Paciente.CiudadId">Ciudad</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Paciente.CiudadId, Model.ListaCiudad,
                     "-Por favor seleccione Ciudad-", new { @class = "form-control" })
                </div>
            </div>



            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Paciente.PacienteId">Actualizar</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>



