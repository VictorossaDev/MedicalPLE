<!-- Tabla Dependiente => Ciudad-->
@model MedicalPLE.Models.ViewModels.CiudadVM
@{
    ViewData["Title"] = "Editar Ciudad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center"> Editar ciudad</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden"  asp-for="Ciudad.CiudadId"/>
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">

           <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Ciudad.NombreCiudad">Nombre de la Ciudad</label>
                </div>
                <div class="col-8">
                    <input asp-for="Ciudad.NombreCiudad" class="form-control" type="text" maxlength="300" />
                    <span asp-validation-for="Ciudad.NombreCiudad" class="text-danger"></span>
                </div>
            </div>

             <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Ciudad.DepartamentoId">Departamento</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Ciudad.DepartamentoId, Model.ListaDepartamento,
                     "-Por favor seleccione Departamento-", new { @class = "form-control" })
                </div>
            </div>



            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Ciudad.CiudadId">Actualizar</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>



